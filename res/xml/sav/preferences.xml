<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <PreferenceCategory android:title="launch preferences" >
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="displayTerrain"
            android:summary="This option if selected will display color."
            android:title="Display Terrain" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="displayTape"
            android:summary="This option if selected will display the tapes."
            android:title="Display Tapes" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="displayMirror"
            android:summary="This option if selected will display the mirror image for HUD."
            android:title="Display Mirror" />
    </PreferenceCategory>

    <PreferenceCategory android:title="Navigation" >
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="infoPage"
            android:summary="This option if selected will display the automatic information page"
            android:title="Auto Information" />
        
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="flightDirector"
            android:summary="This option if selected will enable the flight director"
            android:title="Flight Director" />
        
        
